@model InfoGames.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow" style="background:#DCDCDC; border-radius: 15px;">
                <div class="card-body">
                    <div class="text-center">
                        <img src="~/Logo/INFOGAME.png" alt="Logo da Empresa" class="img-fluid" style="height: 100px; width: 100px;">
                    </div>
                    <h1 class="text-center">Editar Usuario</h1>
                    <hr />
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control input-custom" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NomeDeUsuario" class="control-label"></label>
                            <input asp-for="NomeDeUsuario" class="form-control input-custom" />
                            <span asp-validation-for="NomeDeUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Senha" class="control-label"></label>
                            <input type="password" asp-for="Senha" class="form-control input-custom" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control input-custom" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Token" class="control-label"></label>
                            <input asp-for="Token" class="form-control input-custom" />
                            <span asp-validation-for="Token" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <input asp-for="DataNascimento" class="form-control input-custom" />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                        <div class="form-check form-check-inline mt-2">
                            <input class="form-check-input" asp-for="ContaSuspensa" /> @Html.DisplayNameFor(model => model.ContaSuspensa)

                            <label class="form-check-label">
                                Conta Suspensa
                            </label>
                        </div>
                        <div class="form-check form-check-inline mt-2">
                            <input class="form-check-input" asp-for="ContaRestrita" /> @Html.DisplayNameFor(model => model.ContaRestrita)
                            <label class="form-check-label">
                                Conta Restrita
                            </label>
                        </div>
                        <div class="form-check form-check-inline mt-2">
                            <input class="form-check-input" asp-for="EmailVerificado" /> @Html.DisplayNameFor(model => model.EmailVerificado)
                            <label class="form-check-label">
                                Email Verificado
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="SteamIdVinculado" class="control-label"></label>
                            <input asp-for="SteamIdVinculado" class="form-control input-custom" />
                            <span asp-validation-for="SteamIdVinculado" class="text-danger"></span>
                        </div>
                        <hr/>
                        <div class="text-center mt-4">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
