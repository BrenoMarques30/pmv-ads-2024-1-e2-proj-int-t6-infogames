@model LojaModel

@{
    string action = Model is null ? "Add" : "Edit";
    string id = Model is null ? Guid.NewGuid().ToString() : Model.Id.ToString();
}

<h1>@(Model is null ? "Criar Loja" : "Editar Loja")</h1>

<form method="post" asp-controller="Loja" asp-action="@action">
    <div class="border p-3 mt-4">
        <input type="hidden" asp-for="Id" value="@id" />
        <div class="row pb-2">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" placeholder="Insira o nome da loja" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="row pb-2">
            <label asp-for="Url"></label>
            <input asp-for="Url" placeholder="Insira o URL da loja (opcional)" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <div class="row pb-2">
            <label asp-for="Logo"></label>
            <input asp-for="Logo" placeholder="Insira o URL do logotipo da loja (opcional)" class="form-control" />
            <span asp-validation-for="Logo" class="text-danger"></span>
        </div>
        <div class="row pb-2">
            <label asp-for="ChaveApi"></label>
            <input asp-for="ChaveApi" placeholder="Insira a Chave da API, se existir (opcional)" class="form-control" />
            <span asp-validation-for="ChaveApi" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Salvar</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Loja" asp-action="Index" class="btn btn-outline-secondary form-control">Voltar</a>
            </div>
        </div>
    </div>
</form>
