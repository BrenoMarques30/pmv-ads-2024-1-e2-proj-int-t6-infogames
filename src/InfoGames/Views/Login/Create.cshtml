@model InfoGames.Models.Usuario

@{
    Layout = null;
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfoGames</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InfoGames.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        background: url('/img/BG01.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        position: relative;
    }

    .card-custom {
        background: rgba(220, 220, 220, 0.7); /* Light grey with transparency */
        border-radius: 15px;
    }

        .card-custom h1,
        .card-custom label,
        .card-custom a,
        .card-custom button,
        .card-custom input,
        .card-custom .alert,
        .card-custom p {
            color: #000000; /* Stronger black color for text */
        }

        .card-custom button {
            background-color: #dc3545; /* Bootstrap danger color */
            border: none;
        }

        .card-custom a {
            color: white; /* Bootstrap danger color */
        }

        .card-custom .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .card-custom .alert-success {
            background-color: #d4edda;
            color: #155724;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6" style="margin-top:5%;">
            <div class="card card-custom shadow-lg p-4 mt-3">
                <div class="text-center">
                    <img src="~/Logo/INFOGAME.png" alt="Logo da Empresa" class="img-fluid" style="height: 100px; width: 100px;">
                </div>
                @if (TempData["Mensagem"] != null)
                {
                    <div class="alert alert-success">@TempData["Mensagem"]</div>
                }
                <h1 class="text-center">CADASTRO USUARIO</h1>
                <hr />
                <div class="card-body">
                    <form asp-controller="Usuarios" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control input-custom" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="NomeDeUsuario" class="control-label"></label>
                            <input asp-for="NomeDeUsuario" class="form-control input-custom" />
                            <span asp-validation-for="NomeDeUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Senha" class="control-label"></label>
                            <input type="password" asp-for="Senha" class="form-control input-custom" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control input-custom" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <input asp-for="DataNascimento" class="form-control input-custom" />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input mr-1" />  Aceitar os Termos e Condições
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Token" class="form-control" value="1" />
                            <input type="hidden" asp-for="SteamIdVinculado" class="form-control" value="1" />
                        </div>
                        <div class="form-group text-center mt-2">
                            <!-- Botões centralizados -->
                            <input type="submit" value="Cadastrar" class="btn btn-danger" />
                            <a class="btn btn-secondary" asp-controller="Login" asp-action="Index">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
