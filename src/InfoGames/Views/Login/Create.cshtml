@model InfoGames.Models.Usuario

@{
    //Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Create";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success">@TempData["Mensagem"]</div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 mt-3" style="background:#DCDCDC; border-radius: 15px;">
                <div class="text-center">
                    <img src="~/Logo/INFOGAME.png" alt="Logo da Empresa" class="img-fluid" style="height: 100px; width: 100px;">
                </div>
                <h1 class="text-center">CADASTRO USUARIO</h1>
                <hr />
                <div class="card-body">
                    <form asp-controller="Usuarios" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control input-custom" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="NomeDeUsuario" class="control-label"></label>
                            <input asp-for="NomeDeUsuario" class="form-control input-custom" />
                            <span asp-validation-for="NomeDeUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Senha" class="control-label"></label>
                            <input type="password" asp-for="Senha" class="form-control input-custom" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control input-custom" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <input asp-for="DataNascimento" class="form-control input-custom" />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input mr-1" />  Aceitar os Termos e Condições
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Token" class="form-control" value="1" />
                            <input type="hidden" asp-for="SteamIdVinculado" class="form-control" value="1" />
                        </div>
                        <div class="form-group text-center mt-2">
                            <!-- Botões centralizados -->
                            <input type="submit" value="Cadastrar" class="btn btn-danger" />
                            <a class="btn btn-secondary" asp-controller="Login" asp-action="Index">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
