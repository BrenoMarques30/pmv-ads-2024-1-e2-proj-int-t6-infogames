@model LoginModel
@{
    //Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Reset";
}

<div class="container" style="margin-top: auto;">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg p-4 mt-3" style="background:#DCDCDC; border-radius: 15px;">
                @if (TempData["MensagemErro"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                        @TempData["MensagemErro"]
                    </div>
                }
                @if (TempData["AvisoSenha"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["AvisoSenha"]
                    </div>
                }
                <div class="text-center mt-5">
                    <img src="~/Logo/INFOGAME.png" alt="Logo da Empresa" class="img-fluid" style="height: 100px; width: 100px;">
                    <h1>Recuperar Senha</h1>
                </div>
                <form asp-controller="Login" asp-action="Reset" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" asp-for="Login" class="form-control input-custom" id="email" aria-describedby="emailHelp">
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>

                    <div class="">
                        <label for="senha" class="form-label">Nova Senha</label>
                        <input type="password" asp-for="Senha" class="form-control input-custom" id="senha">
                        @Html.ValidationMessageFor(x => x.Senha)
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-danger">Confirmar</button>
                        <a class="btn btn-secondary" asp-controller="Login" asp-action="Index">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
