@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfoGames</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InfoGames.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        background: url('/img/BG01.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        position: relative;
    }

    .card-custom {
        background: rgba(220, 220, 220, 0.7); /* Light grey with transparency */
        border-radius: 15px;
    }

        .card-custom h1,
        .card-custom label,
        .card-custom a,
        .card-custom button,
        .card-custom input,
        .card-custom .alert,
        .card-custom p {
            color: #000000; /* Stronger black color for text */
        }

        .card-custom button {
            background-color: #dc3545; /* Bootstrap danger color */
            border: none;
        }

        .card-custom a {
            color: #dc3545; /* Bootstrap danger color */
        }

        .card-custom .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .card-custom .alert-success {
            background-color: #d4edda;
            color: #155724;
        }
</style>

<div class="container" style="margin-top: 8%;">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card card-custom shadow-lg p-4 mt-3">
                @if (TempData["MensagemErro"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
                        @TempData["MensagemErro"]
                    </div>
                }
                @if (TempData["AvisoSenha"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["AvisoSenha"]
                    </div>
                }
                <div class="text-center mt-5">
                    <img src="~/Logo/INFOGAME.png" alt="Logo da Empresa" class="img-fluid" style="height: 100px; width: 100px;">
                    <h1>ENTRAR</h1>
                </div>
                <form asp-controller="Login" asp-action="Entrar" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" asp-for="Login" class="form-control input-custom" id="email" aria-describedby="emailHelp">
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>

                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha</label>
                        <input type="password" asp-for="Senha" class="form-control input-custom" id="senha">
                        @Html.ValidationMessageFor(x => x.Senha)
                    </div>
                    <div class="text-end mt-1">
                        <a asp-controller="Login" asp-action="Reset">Esqueci a senha</a>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger btn-lg">Entrar</button>
                    </div>
                    <div class="text-center mt-2">
                        Não possui conta? <a asp-controller="Login" asp-action="Create">Cadastre-se</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
