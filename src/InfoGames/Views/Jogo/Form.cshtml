@model JogoModel

@{
    string action = Model is null ? "Add" : "Edit";
    string id = Model is null ? Guid.NewGuid().ToString() : Model.Id.ToString();
}

<h1>@(Model is null ? "Criar Jogo" : "Editar Jogo")</h1>

<form method="post" asp-controller="Jogo" asp-action="@action">
    <input type="hidden" asp-for="Id" value="@id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <label asp-for="AppId"></label>
            <input asp-for="AppId" placeholder="Insira o AppId do jogo" class="form-control" />
            <span asp-validation-for="AppId" class="text-danger"></span>
        </div>
        <div class="row pb-2">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" placeholder="Insira o nome do jogo" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Salvar</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Jogo" asp-action="Index" class="btn btn-outline-secondary form-control">Voltar</a>
            </div>
        </div>
    </div>
</form>